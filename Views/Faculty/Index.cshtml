@model IEnumerable<SIMS.Models.Faculty>

<h2>Faculty List</h2>
<a asp-action="Create" class="btn btn-primary">Add Faculty</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.Name</td>
                <td>@f.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@f.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@f.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
