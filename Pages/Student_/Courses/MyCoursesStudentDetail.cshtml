@page "{id}"
@model SIMS.Pages.Student_.Courses.MyCoursesStudentDetailModel
@{
    ViewData["Title"] = "My Course Detail";
    Layout = "_LayoutStudent";
}

<div class="container mt-4">
    <!-- Course Info -->
    <div class="card shadow-lg border-0 mb-4">
        <div class="card-body">
            <h2 class="card-title text-primary fw-bold mb-2">
                <i class="fas fa-book-open me-2"></i> @Model.Course.Title
            </h2>
            <p class="card-text text-muted fs-5">@Model.Course.Description</p>

            <div class="row mt-3">
                <div class="col-md-4 mb-2">
                    <i class="fas fa-chalkboard-teacher text-info me-2"></i>
                    <strong>Instructor:</strong> @Model.Instructor?.Name
                </div>
                <div class="col-md-4 mb-2">
                    <i class="fas fa-clipboard-check text-success me-2"></i>
                    <strong>Status:</strong>
                    <span class="badge fs-6 px-3 py-2 @(Model.Enrollment?.Status == Models.EnrollmentStatus.Accepted ? "bg-success" : "bg-secondary")">
                        @Model.Enrollment?.Status
                    </span>
                </div>
                <div class="col-md-4 mb-2">
                    <i class="fas fa-calendar-alt text-warning me-2"></i>
                    <strong>Enrollment Date:</strong>
                    @Model.Enrollment?.EnrolledDate.ToString("dd/MM/yyyy")
                </div>
            </div>
        </div>
    </div>

    <!-- Assignments -->
    <h3 class="fw-bold mb-3">
        <i class="fas fa-tasks me-2 text-primary"></i>Assignments
    </h3>

    @if (Model.Assignments.Any())
    {
        <div class="row">
            @foreach (var assignment in Model.Assignments)
            {
                var status = Model.AssignmentStatuses[assignment.Id];
                var btnClass = status == "Submitted" ? "btn-success"
                : status == "Overdue" ? "btn-danger"
                : "btn-primary";
                var btnText = status == "Submitted" ? "Already Submitted"
                : "Submit Assignment";

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-shadow transition-all">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-dark fw-bold">
                                <i class="fas fa-file-alt me-2 text-secondary"></i>@assignment.Title
                            </h5>
                            <p class="card-text text-muted mb-2">
                                <i class="fas fa-clock me-1 text-danger"></i>
                                Due: @assignment.DueDate.ToString("dd/MM/yyyy HH:mm")
                            </p>

                            @if (!string.IsNullOrEmpty(assignment.Description))
                            {
                                <a href="~/@assignment.Description" download
                                   class="btn btn-sm btn-outline-success w-100 mb-2">
                                    <i class="fas fa-download me-1"></i> Download
                                </a>
                            }

                            @if (status == "Submitted")
                            {
                                <div class="alert alert-info text-center mb-2">
                                    <i class="fas fa-check-circle me-2 text-success"></i>
                                    <strong>Already Submitted</strong>
                                </div>
                            }

                            @if (status == "Overdue" && status != "Submitted")
                            {
                                <button class="btn w-100 @btnClass"
                                        onclick="alert('Deadline đã hết hạn, bạn không thể nộp bài nữa!')"
                                        type="button">
                                    <i class="fas fa-upload me-1"></i> @btnText
                                </button>
                            }
                            else if (status != "Submitted")
                            {
                                <a asp-page="/Student_/Submissions/Submit"
                                   asp-route-assignmentId="@assignment.Id"
                                   class="btn w-100 @btnClass">
                                    <i class="fas fa-upload me-1"></i> @btnText
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm">
            <i class="fas fa-info-circle me-2"></i>No assignments available for this course.
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .transition-all {
        transition: all 0.2s ease-in-out;
    }
</style>
