@page "{id}"
@model SIMS.Pages.Admin.Courses.DetailModel
@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-journal-bookmark-fill me-2"></i>Course Details
        </h2>
        <a asp-page="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Course Main Card -->
    <div class="card shadow-lg border-0 rounded-4 p-4 mb-4">
        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-md-8">
                <h3 class="fw-bold text-dark">@Model.Course.Title</h3>
                <p class="text-muted fst-italic mb-3">@Model.Course.Description</p>

                <span class="badge bg-primary fs-6 me-2">
                    <i class="bi bi-person-video3 me-1"></i>@Model.Course.Faculty?.Name
                </span>
                <span class="badge bg-secondary fs-6">
                    <i class="bi bi-envelope-at me-1"></i>@Model.Course.Faculty?.Email
                </span>
            </div>

            <!-- Right Column Stats -->
            <div class="col-md-4 text-center border-start">
                <div class="mb-3">
                    <h5 class="text-muted">Enrollments</h5>
                    <span class="fs-3 fw-bold text-success">
                        <i class="bi bi-people-fill me-1"></i>@(Model.Course.Enrollments?.Count() ?? 0)
                    </span>
                </div>
                <div>
                    <h5 class="text-muted">Assignments</h5>
                    <span class="fs-3 fw-bold text-info">
                        <i class="bi bi-journal-check me-1"></i>@(Model.Course.Assignments?.Count() ?? 0)
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Faculty Info Card -->
    <div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
        <h5 class="fw-bold text-primary mb-3">
            <i class="bi bi-person-badge-fill me-2"></i>Faculty Information
        </h5>
        <p><strong>Name:</strong> @Model.Course.Faculty?.Name</p>
        <p><strong>Email:</strong> @Model.Course.Faculty?.Email</p>
        <p><strong>About:</strong> @Model.Course.Faculty?.Description</p>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex gap-2">
        <a asp-page="Edit" asp-route-id="@Model.Course.Id" class="btn btn-warning">
            <i class="bi bi-pencil-fill"></i> Edit
        </a>
        <a asp-page="Delete" asp-route-id="@Model.Course.Id" class="btn btn-danger">
            <i class="bi bi-trash-fill"></i> Delete
        </a>
    </div>
</div>
