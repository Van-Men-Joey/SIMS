@page "{id}"
@model SIMS.Pages.Admin.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="d-flex" id="wrapper">
    @await Html.PartialAsync("_Sidebar")

    <div id="page-content-wrapper" class="w-100">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container-fluid">
                <span class="navbar-text">
                    Delete User
                </span>
            </div>
        </nav>

        <div class="container mt-4">
            <h3>Are you sure you want to delete this user?</h3>
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.UserViewModel.Name</dd>

                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Model.UserViewModel.Email</dd>

                <dt class="col-sm-2">Role</dt>
                <dd class="col-sm-10">@Model.UserViewModel.Role</dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="UserViewModel.Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
