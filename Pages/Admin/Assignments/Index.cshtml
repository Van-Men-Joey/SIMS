@page
@model SIMS.Pages.Admin.Assignments.IndexModel
@{
    ViewData["Title"] = "Quản lý Bài tập";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid px-4 mt-4">

    <form method="get" class="mb-3 row g-2">
        <div class="col-md-6">
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Tìm kiếm theo tiêu đề bài tập..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-info w-100">
                <i class="fas fa-search"></i> Tìm kiếm
            </button>
        </div>
    </form>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th>Tiêu đề</th>
                <th>Khóa học</th>
                <th>Mô tả</th>
                <th>Ngày tạo</th>
                <th>Hạn nộp</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Assignments.Any())
            {
                foreach (var a in Model.Assignments)
                {
                    <tr>
                        <td>@a.Title</td>
                        <td>@Model.Courses.FirstOrDefault(c => c.Id == a.CourseId)?.Title </td>
                        <td style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@a.Description">@a.Description</td>
                        <td class="text-center">@a.CreatedDate.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">@a.DueDate.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">                         
                            <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@a.Id" title="Xóa bài tập">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Không tìm thấy bài tập nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal confirm xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form method="post" asp-page-handler="Delete">
            <input type="hidden" name="id" id="deleteId" />
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc muốn xóa bài tập này không?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var inputDeleteId = deleteModal.querySelector('#deleteId');
            inputDeleteId.value = id;
        });
    </script>
}
