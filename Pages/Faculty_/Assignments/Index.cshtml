@page
@model SIMS.Pages.Faculty_.Assignments.IndexModel
@{
    ViewData["Title"] = "Quản lý bài tập";
    Layout = "_LayoutFaculty";
}

<h2 class="mb-4">Danh sách bài tập</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i> Tạo bài tập mới
    </a>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Tiêu đề</th>
            <th>Mô tả</th>
            <th>Khóa học</th>
            <th style="width:130px;">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Assignments.Count == 0)
        {
            <tr>
                <td colspan="4" class="text-center text-muted py-4">
                    <i class="bi bi-inbox"></i> Chưa có bài tập nào.
                </td>
            </tr>
        }
        else
        {
            foreach (var assignment in Model.Assignments)
            {
                <tr>
                    <td class="fw-semibold">@assignment.Id</td>
                    <td class="fw-semibold">@assignment.Title</td>
                    <td style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        @assignment.Description
                    </td>
                    <td style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        @assignment.DueDate
                    </td>
                   @*  <td>@assignment.Course?.Title</td> *@
                    <td>
                        <a asp-page="Edit" asp-route-id="@assignment.Id" class="btn btn-sm btn-warning me-1" title="Chỉnh sửa">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@assignment.Id" style="display:inline;"
                              onsubmit="return confirm('Bạn có chắc chắn muốn xóa bài tập này?');">
                            <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
