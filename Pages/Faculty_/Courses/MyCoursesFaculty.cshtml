@page
@model SIMS.Pages.Faculty_.Courses.MyCoursesFacultyModel
@{
    ViewData["Title"] = "My Courses";
    Layout = "_LayoutFaculty";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">
        <i class="fas fa-book-open me-2"></i> My Courses
    </h2>

    @if (Model.Courses.Any())
    {
        <div class="row">
            @foreach (var course in Model.Courses)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100 course-card">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-3 text-center">
                                <i class="fas fa-chalkboard-teacher fa-3x text-info"></i>
                            </div>
                            <h5 class="card-title fw-bold text-center text-dark">
                                @course.Title
                            </h5>
                            <p class="card-text text-muted flex-grow-1">
                                @course.Description
                            </p>
                            <a asp-page="/Faculty_/Courses/MyCoursesDetail" asp-route-id="@course.Id"
                               class="btn btn-outline-primary mt-auto position-relative">
                                <i class="fas fa-eye me-1"></i> View Details
                                @if (course.PendingCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @course.PendingCount
                                    </span>
                                }
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="fas fa-info-circle me-2"></i> No courses assigned.
        </div>
    }
</div>

<style>
    .course-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }
</style>
